{
  "name": "dbx-studio",
  "version": "0.0.1",
  "private": true,
  "description": "AI-powered open-source database management tool",
  "author": "DBX Studio Team",
  "license": "MIT",
  "scripts": {
    "dev": "turbo run dev",
    "dev:all": "turbo run dev",
    "dev:api": "turbo run dev --filter=@dbx/api",
    "dev:desktop": "turbo run dev --filter=@dbx/desktop",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "turbo": "^2.7.2",
    "prettier": "^3.4.2"
  },
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": ">=20.0.0"
  }
}
